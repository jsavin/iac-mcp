{
  "name": "iac-mcp",
  "version": "0.1.0",
  "description": "Universal bridge between AI/LLMs and native applications using Just-In-Time Discovery (JITD)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "iac-mcp": "dist/cli.js"
  },
  "scripts": {
    "prebuild": "node scripts/clear-cache.js",
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "cli": "node dist/cli.js",
    "cli:discover": "node dist/cli.js discover-apps",
    "cli:test": "node dist/cli.js test",
    "cli:help": "node dist/cli.js help",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:queued": "./tools/test-queue.sh vitest run",
    "test:queued:unit": "./tools/test-queue.sh vitest run --dir tests/unit",
    "test:queued:coverage": "./tools/test-queue.sh vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "sdef:coverage": "npx tsx scripts/analyze-sdef-coverage.ts",
    "sdef:coverage:json": "npx tsx scripts/analyze-sdef-coverage.ts --json",
    "sdef:coverage:verbose": "npx tsx scripts/analyze-sdef-coverage.ts --verbose",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "verify": "npm run verify:node && npm run build && echo '✓ Setup verified successfully!'",
    "verify:node": "node -e \"const v=process.version.split('.')[0].slice(1);if(v<20){console.error('❌ Node.js 20+ required, found:',process.version);process.exit(1)}else{console.log('✓ Node.js version:',process.version)}\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "automation",
    "dynamic-discovery",
    "macos",
    "applescript",
    "jxa",
    "sdef",
    "windows",
    "vba",
    "com",
    "cross-platform"
  ],
  "author": "Jake Savin",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "fast-xml-parser": "^4.5.3",
    "glob": "^11.1.0",
    "tsx": "^4.21.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.18.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
